#!/bin/sh
# Description: Install the default GNOME wallpaper

cat > /usr/share/glib-2.0/schemas/90_ubuntuvanillagnome-wallpaper.gschema.override <<EOF
[org.gnome.desktop.background]
picture-uri='file:///usr/share/backgrounds/gnome/vanilla-default.png'
picture-uri-dark='file:///usr/share/backgrounds/gnome/vanilla-dark.png'
EOF
glib-compile-schemas /usr/share/glib-2.0/schemas/
